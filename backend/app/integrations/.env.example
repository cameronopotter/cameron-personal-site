# Digital Greenhouse Integration Environment Variables
# Copy this file to .env and configure your API keys and settings

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub Personal Access Token (required for repository data)
# Generate at: https://github.com/settings/personal-access-tokens
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username

# GitHub webhook secret (optional, for real-time events)
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Repositories to track (comma-separated, leave empty for all)
GITHUB_REPOSITORIES=

# =============================================================================
# SPOTIFY INTEGRATION
# =============================================================================
# Spotify Web API credentials
# Create app at: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/auth/spotify/callback

# Spotify refresh token (obtained after OAuth flow)
SPOTIFY_REFRESH_TOKEN=

# =============================================================================
# WEATHER API INTEGRATION
# =============================================================================
# OpenWeatherMap API key (required for weather data)
# Get free key at: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_DEFAULT_LOCATION=London,UK
WEATHER_UNITS=metric

# =============================================================================
# WAKATIME INTEGRATION
# =============================================================================
# WakaTime API key (optional, for coding time tracking)
# Get from: https://wakatime.com/settings/account
WAKATIME_API_KEY=your_wakatime_api_key
WAKATIME_USERNAME=your_wakatime_username

# Projects to include/exclude (comma-separated)
WAKATIME_INCLUDE_PROJECTS=
WAKATIME_EXCLUDE_PROJECTS=

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Twitter API Bearer Token (optional)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn Access Token (optional)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# RSS feeds for blog content (comma-separated URLs)
RSS_FEEDS=https://example.com/feed.xml,https://another-blog.com/rss

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis connection URL (optional, falls back to memory cache)
REDIS_URL=redis://localhost:6379/0

# Cache settings
CACHE_DEFAULT_TTL=300
CACHE_MAX_MEMORY_MB=256

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL (inherited from main app config)
DATABASE_URL=postgresql://user:password@localhost:5432/digital_greenhouse

# =============================================================================
# INTEGRATION FEATURE FLAGS
# =============================================================================
# Enable/disable specific integrations
ENABLE_GITHUB_INTEGRATION=true
ENABLE_SPOTIFY_INTEGRATION=false
ENABLE_WEATHER_INTEGRATION=true
ENABLE_WAKATIME_INTEGRATION=false
ENABLE_SOCIAL_INTEGRATION=false

# Enable advanced features
ENABLE_REAL_TIME_EVENTS=true
ENABLE_MOOD_SYNTHESIS=true
ENABLE_GROWTH_PREDICTION=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Service-specific rate limits (requests per minute)
GITHUB_RATE_LIMIT=80
SPOTIFY_RATE_LIMIT=100
WEATHER_RATE_LIMIT=10
WAKATIME_RATE_LIMIT=10

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket settings
WEBSOCKET_ENABLED=true
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_MESSAGE_SIZE=1048576

# =============================================================================
# PRIVACY & GDPR COMPLIANCE
# =============================================================================
# Privacy settings
ANONYMIZE_VISITOR_DATA=true
DATA_RETENTION_DAYS=30
GDPR_COMPLIANCE=true

# Data anonymization
HASH_IP_ADDRESSES=true
HASH_USER_AGENTS=true

# User rights
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true
REQUIRE_CONSENT=false

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Health check settings
HEALTH_CHECK_INTERVAL=30
INTEGRATION_TIMEOUT=10

# Alerting thresholds
ERROR_RATE_THRESHOLD=0.1
RESPONSE_TIME_THRESHOLD_MS=1000
AVAILABILITY_THRESHOLD=0.95

# =============================================================================
# TASK SCHEDULING
# =============================================================================
# Background task settings
ENABLE_TASK_SCHEDULER=true

# Task intervals (seconds)
MOOD_SYNTHESIS_INTERVAL=180
WEATHER_SYNC_INTERVAL=900
GITHUB_SYNC_INTERVAL=1800
GROWTH_CALCULATION_INTERVAL=3600

# =============================================================================
# LOGGING
# =============================================================================
# Log levels for services
LOG_LEVEL_GITHUB=INFO
LOG_LEVEL_SPOTIFY=INFO
LOG_LEVEL_WEATHER=INFO
LOG_LEVEL_WAKATIME=INFO
LOG_LEVEL_WEBSOCKETS=INFO
LOG_LEVEL_CACHE=INFO
LOG_LEVEL_RATE_LIMITER=WARNING

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode settings
DEBUG_MODE=false
ENABLE_MOCK_DATA=false
BYPASS_RATE_LIMITS=false

# Testing
RUN_INTEGRATION_TESTS=false
TEST_API_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# API security
API_KEY_ENCRYPTION_KEY=your_32_character_encryption_key_here

# CORS settings (inherited from main app)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pooling
HTTP_CLIENT_TIMEOUT=30
HTTP_CLIENT_MAX_CONNECTIONS=100
HTTP_CLIENT_MAX_KEEPALIVE_CONNECTIONS=20

# Async settings
MAX_CONCURRENT_TASKS=10
TASK_QUEUE_SIZE=1000

# Cache optimization
CACHE_PREFETCH_ENABLED=true
CACHE_COMPRESSION_ENABLED=false

# =============================================================================
# INTEGRATION-SPECIFIC ADVANCED SETTINGS
# =============================================================================

# GitHub Advanced
GITHUB_ENABLE_WEBHOOKS=true
GITHUB_WEBHOOK_EVENTS=push,pull_request,issues,release
GITHUB_INCLUDE_PRIVATE_REPOS=false

# Spotify Advanced
SPOTIFY_AUDIO_FEATURES_CACHE_HOURS=24
SPOTIFY_MOOD_ANALYSIS_SENSITIVITY=0.7

# Weather Advanced
WEATHER_INCLUDE_FORECAST=true
WEATHER_FORECAST_DAYS=5
WEATHER_UPDATE_INTERVAL_MINUTES=15

# Social Media Advanced
SOCIAL_MAX_POSTS_PER_SYNC=50
SOCIAL_UPDATE_INTERVAL_HOURS=6

# Analytics Advanced
ANALYTICS_SESSION_TIMEOUT_MINUTES=30
ANALYTICS_BATCH_SIZE=1000

# Growth Engine Advanced
GROWTH_ANALYSIS_HISTORY_DAYS=90
GROWTH_PREDICTION_HORIZON_DAYS=30

# Mood Engine Advanced
MOOD_SYNTHESIS_CONFIDENCE_THRESHOLD=0.5
MOOD_TRANSITION_SMOOTHING=0.8

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Data backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# EXTERNAL SERVICE ENDPOINTS
# =============================================================================
# Override default API endpoints if needed
GITHUB_API_BASE_URL=https://api.github.com
SPOTIFY_API_BASE_URL=https://api.spotify.com/v1
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WAKATIME_API_BASE_URL=https://wakatime.com/api/v1

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Webhook notifications (optional)
NOTIFICATION_WEBHOOK_URL=

# =============================================================================
# ENVIRONMENT IDENTIFICATION
# =============================================================================
ENVIRONMENT=development
VERSION=1.0.0
BUILD_ID=

# Deployment info
DEPLOYED_AT=
DEPLOYED_BY=
GIT_COMMIT_SHA=