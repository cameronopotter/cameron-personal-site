# Digital Greenhouse API Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Digital Greenhouse API"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ADMIN_PASSWORD=your-admin-password-change-this

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/digital_greenhouse
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/digital_greenhouse
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# External API Keys (Optional - leave empty to disable integrations)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_USERNAME=your-github-username

SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/auth/spotify/callback

WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

WAKATIME_API_KEY=your-wakatime-api-key

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Background Tasks (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Garden Simulation Settings
GROWTH_CALCULATION_INTERVAL_MINUTES=15
WEATHER_UPDATE_INTERVAL_MINUTES=15
DATA_SYNC_INTERVAL_HOURS=4

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_ANALYTICS=true
ENABLE_VISITOR_TRACKING=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_SPOTIFY_INTEGRATION=false
ENABLE_WEATHER_INTEGRATION=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ENABLE_PROMETHEUS=true

# File Upload Settings
UPLOAD_MAX_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.svg,.webp

# Performance Settings
MAX_CONCURRENT_REQUESTS=100