# Digital Greenhouse API Configuration
# Copy this file to .env and update the values

# Application
SECRET_KEY=your-secret-key-here-minimum-32-characters
ADMIN_PASSWORD=your-admin-password
DEBUG=true
LOG_LEVEL=INFO

# Database (SQLite - no additional configuration needed)
# Database file will be created automatically as digital_greenhouse.db

# External Integrations (Optional)
# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_USERNAME=your-github-username

# Weather Integration (Optional)
WEATHER_API_KEY=your-openweathermap-api-key

# Spotify Integration (Optional)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# WakaTime Integration (Optional)
WAKATIME_API_KEY=your-wakatime-api-key

# Feature Flags
ENABLE_GITHUB_INTEGRATION=true
ENABLE_WEATHER_INTEGRATION=false
ENABLE_SPOTIFY_INTEGRATION=false
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_TASKS=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost:3000

# Background Tasks
GROWTH_CALCULATION_INTERVAL_MINUTES=15
WEATHER_UPDATE_INTERVAL_MINUTES=15
DATA_SYNC_INTERVAL_HOURS=4