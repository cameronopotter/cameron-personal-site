# Digital Greenhouse Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://garden_user:garden_secret_2024@localhost:5432/digital_greenhouse
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_RECYCLE=300
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# EXTERNAL API INTEGRATIONS
# =============================================================================

# GitHub API (Required for project growth)
GITHUB_TOKEN=ghp_your_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Spotify API (Optional - for music mood integration)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/callback/spotify

# Weather API (Optional - for real weather influence)
OPENWEATHER_API_KEY=your_openweathermap_api_key
WEATHER_LOCATION=37.7749,-122.4194  # San Francisco coordinates
WEATHER_UNITS=metric  # metric, imperial, or kelvin

# WakaTime API (Optional - for coding time tracking)
WAKATIME_API_KEY=waka_your_api_key_here
WAKATIME_USERNAME=your_wakatime_username

# Social Media APIs (Optional)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_PASSWORD=your_secure_admin_password
JWT_SECRET_KEY=your-jwt-secret-key-for-admin-auth
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache TTL Settings (in seconds)
CACHE_GARDEN_STATE_TTL=300
CACHE_WEATHER_STATE_TTL=900
CACHE_PROJECT_DETAILS_TTL=1800
CACHE_ANALYTICS_TTL=3600
CACHE_GITHUB_DATA_TTL=1800
CACHE_SPOTIFY_DATA_TTL=300

# Rate Limiting
RATE_LIMIT_GARDEN_STATE=100/minute
RATE_LIMIT_PROJECT_INTERACTION=30/minute
RATE_LIMIT_SEED_PLANTING=5/minute
RATE_LIMIT_ANALYTICS=10/minute

# Background Task Settings
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIMEOUT=300

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Base URL
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Feature Flags
VITE_ENABLE_SPOTIFY_INTEGRATION=true
VITE_ENABLE_WEATHER_INTEGRATION=true
VITE_ENABLE_SOCIAL_INTEGRATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=true

# Performance Settings
VITE_MAX_PARTICLES=1000
VITE_DEFAULT_QUALITY=high  # low, medium, high, ultra
VITE_ENABLE_SHADOWS=true
VITE_ENABLE_POSTPROCESSING=true

# =============================================================================
# PRIVACY & GDPR COMPLIANCE
# =============================================================================

# Privacy Settings
VISITOR_TRACKING_ENABLED=true
GDPR_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true

# Cookie Settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAMESITE=lax
COOKIE_MAX_AGE=86400

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker

# SSL/HTTPS (Production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
IMAGE_TAG=latest

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_CORS=true

# Test Database
TEST_DATABASE_URL=postgresql://garden_user:garden_secret_2024@localhost:5432/test_digital_greenhouse

# Mock Services (for development/testing)
USE_MOCK_GITHUB=false
USE_MOCK_SPOTIFY=false
USE_MOCK_WEATHER=false

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# Growth Algorithm Settings
GROWTH_CALCULATION_INTERVAL=300  # 5 minutes
WEATHER_UPDATE_INTERVAL=900      # 15 minutes
ANALYTICS_SYNC_INTERVAL=3600     # 1 hour

# AI/ML Features (Future)
ENABLE_AI_SUGGESTIONS=false
ML_MODEL_PATH=/path/to/models
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# A/B Testing
AB_TESTING_ENABLED=false
AB_TEST_TRAFFIC_SPLIT=0.5

# Advanced Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=digital-greenhouse
APM_ENVIRONMENT=development